      block header
        mixin link(href, friendlyName)
          - var active
          if href === pageID
            - active = true
          else
            - active = false
          li.nav-item
            a.nav-link(href=href active=active)= friendlyName
        nav.navbar.navbar-expand-md.row.navbar-light
          div
            a.navbar-brand(href='/')
