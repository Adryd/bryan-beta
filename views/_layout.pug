block titleDeterminer
  if pageTitle
    - var title = 'Bryan Agredo - ' + pageTitle
  else
    - var title = 'Bryan Agredo'
  if pageDesc
    - var description = pageDesc
  else 
    - var description = 'Oops! There\'s no description available for this page.'
  unless pageID
    - var pageID = ''
doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
      title= title

      meta(property='og:title', content=title)
      meta(property='og:type', content='website')
      meta(property='og:url', content='https://bryan.plus/')
      meta(property='og:image', content='/images/bryan-square.png')
      meta(property='og:description', content=description)
      meta(property='og:locale', content='en_US')
      meta(property='og:site_name', content='Bryan Agredo')
      meta(name='author', content='@Bryan_Agredo')

      meta(name='viewport',           content='width=device-width, initial-scale=1, user-scalable=no')
      meta(name='description',        content=description)
      meta(name='theme-color',        content='#d82c2a')
      meta(name='application-name',   content='Bryan+')
      link(rel='icon',                href='/images/bryan-64x.png')
      link(rel='icon',                href='/images/bryan-64x.png' type='image/x-icon')
      link(rel='icon',                href='/images/bryan-512x.png' type='shortcut icon')
      link(rel='apple-touch-icon',    href='/images/bryan-512x.png')
      link(rel='stylesheet',          href='/css/bootstrap.min.css')
      link(rel='stylesheet',          href='/css/global.css')
  body
    .pageCard.container.m-1.ml-md-auto.ml-sm-auto.mr-md-auto.mr-sm-auto.mt-md-5
      block header
        mixin link(href, friendlyName)
          - var active
          if href === pageID
            - active = true
          else
            - active = false
          li.nav-item
            a.nav-link(href=href active=active)= friendlyName
        nav.navbar.navbar-expand-md.row.navbar-dark
          div
            a.navbar-brand(href='/')
              span Bryan Agredo
            a.forHire(href='/contact')
              span Hire Me!
          button.navbar-toggler(type='button', data-toggle="collapse"
          data-target="#navbarContent" aria-controls="navbarContent"
          aria-expanded="false" aria-label="Toggle navigation")
            span.navbar-toggler-icon
          .collapse.navbar-collapse(id="navbarContent")
            ul.navbar-nav.mr-auto
              //- +link('/team', 'Team')
              +link('/about', 'About')
              +link('/portfolio', 'Portfolio')
              +link('/contact', 'Contact')
      .content.pb-4
        block content
    block footer
      mixin link(href, friendlyName)
        li.footer-item
          a.footer-link(href=href target="_blank")= friendlyName
      footer
        .container.p-3.p-md-5.footer
          ul.footer-links
            +link('https://github.com/ciolt', 'GitHub')
            +link('https://twitter.com/Bryan_Agredo', 'Twitter')
            +link('https://instagram.com/Bryan.Agredo', 'Instagram')
            +link('https://linkedin.com/in/Bryan-Agredo', 'LinkedIn')
          p
            | Built and designed with love by 
            a(href='https://twitter.com/Bryan_Agredo' target="_blank") @Bryan_Agredo
            |  in Miami.
      script(type='text/javascript',  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin='anonymous')
      script(type='text/javascript',  src='/js/bootstrap.min.js')